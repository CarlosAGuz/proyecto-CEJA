<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0178D4"
    tools:context=".registrate">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:id="@+id/imageView2"
            android:src="@drawable/cuenta"
            android:layout_marginBottom="60dp"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="51dp"
            />

        <EditText
            android:id="@+id/txt_registrar_nombres"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="5dp"
            android:background="@drawable/btn_redondo_white"
            android:inputType="textPersonName"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:hint="Nombre(s)" />

        <EditText
            android:id="@+id/txt_registrar_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="5dp"
            android:background="@drawable/btn_redondo_white"
            android:inputType="textPersonName"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:hint="Usuario" />

        <EditText
            android:id="@+id/txt_registrar_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:drawableLeft="@drawable/contrasena"
            android:drawablePadding="5dp"
            android:background="@drawable/btn_redondo_white"
            android:inputType="textPassword"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:hint="ContraseÃ±a"
            />




        <Button
            android:id="@+id/button_registrate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="crear cuenta"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="20dp"
            android:layout_marginBottom="20dp"

            />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>